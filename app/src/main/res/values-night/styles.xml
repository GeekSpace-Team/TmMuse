<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/aply_text_color</item>
        <item name="colorPrimaryDark">@color/card_background</item>
        <item name="colorAccent">@color/aply_text_color</item>
    </style>


    <dimen name="design_default_corner_custom_radius">8dp</dimen>

    <style name="CustomShapeAppearance.CardView" parent="">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">@dimen/design_default_corner_custom_radius</item>
    </style>

    <dimen name="design_custom_inset">2dp</dimen>

    <style name="CustomShapeAppearance" parent="Widget">
        <item name="android:padding">6dp</item>
        <item name="android:stateListAnimator">@animator/button_state_list_anim_neumorph</item>
        <item name="neumorph_inset">@dimen/design_custom_inset</item>
        <item name="neumorph_shadowElevation">2dp</item>
        <item name="neumorph_shadowColorLight">#0F1113</item>
        <item name="neumorph_shadowColorDark">#4D5963</item>
        <item name="neumorph_shapeType">basin</item>
        <item name="neumorph_shapeAppearance">@style/CustomShapeAppearance.CardView</item>
    </style>


    <dimen name="design_default_corner_custom_radius_img">8dp</dimen>

    <style name="CustomShapeAppearance.Img" parent="">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">@dimen/design_default_corner_custom_radius_img</item>
    </style>

    <dimen name="design_custom_padding">1dp</dimen>

    <style name="CustomBottomImgNeuw" parent="Widget">
        <item name="android:padding">@dimen/design_custom_padding</item>
        <item name="android:stateListAnimator">@animator/button_state_list_anim_neumorph</item>
        <item name="neumorph_inset">5dp</item>
        <item name="neumorph_shadowElevation">2dp</item>
        <item name="neumorph_shadowColorLight">#0F1113</item>
        <item name="neumorph_shadowColorDark">#4D5963</item>
        <item name="neumorph_shapeType">flat</item>
        <item name="neumorph_shapeAppearance">@style/CustomShapeAppearance.Img</item>
    </style>


    <style name="ImageCaruselCard" parent="Widget">
        <item name="android:padding">@dimen/design_custom_padding</item>
        <item name="android:stateListAnimator">@animator/button_state_list_anim_neumorph</item>
        <item name="neumorph_inset">1dp</item>
        <item name="neumorph_shadowElevation">2dp</item>
        <item name="neumorph_shadowColorLight">#0F1113</item>
        <item name="neumorph_shadowColorDark">#4D5963</item>
        <item name="neumorph_shapeType">flat</item>
        <item name="neumorph_shapeAppearance">@style/CustomCardImgCarusel</item>
    </style>


    <dimen name="design_settings_card_padding">6dp</dimen>

    <!--Settings CardView-->
    <style name="SettingsCardView" parent="android:Widget">
        <item name="android:padding">@dimen/design_settings_card_padding</item>
        <item name="android:stateListAnimator">@animator/button_state_list_anim_neumorph</item>
        <item name="neumorph_inset">@dimen/design_default_inset</item>
        <item name="neumorph_shadowElevation">2dp</item>
        <item name="neumorph_shadowColorLight">#0F1113</item>
        <item name="neumorph_shadowColorDark">#4D5963</item>
        <item name="neumorph_shapeType">flat</item>
        <item name="neumorph_shapeAppearance">@style/ShapeAppearance.Neumorph.CardView</item>
    </style>
    <!--Settings CardView-->


    <!--Category CardView start-->
    <dimen name="design_default_corner_custom_radius_category">8dp</dimen>

    <style name="CustomShapeAppearance.Category" parent="">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">@dimen/design_default_corner_custom_radius_category</item>
    </style>

    <style name="CustomCategoryVidget" parent="Widget">
        <item name="android:padding">@dimen/design_custom_padding</item>
        <item name="android:stateListAnimator">@animator/button_state_list_anim_neumorph</item>
        <item name="neumorph_inset">@dimen/design_default_inset</item>
        <item name="neumorph_shadowElevation">6dp</item>
        <item name="neumorph_shadowColorLight">#0F1113</item>
        <item name="neumorph_shadowColorDark">#4D5963</item>
        <item name="neumorph_shapeType">flat</item>
        <item name="neumorph_shapeAppearance">@style/CustomShapeAppearance.Category</item>
    </style>
    <!--Category CardView end-->


    <style name="CustomBottomImgNeuwSecond" parent="Widget">
        <item name="android:padding">@dimen/design_custom_padding</item>
        <item name="android:stateListAnimator">@animator/button_state_list_anim_neumorph</item>
        <item name="neumorph_inset">@dimen/design_default_inset</item>
        <item name="neumorph_shadowElevation">4dp</item>
        <item name="neumorph_shadowColorLight">#0F1113</item>
        <item name="neumorph_shadowColorDark">#4D5963</item>
        <item name="neumorph_shapeType">flat</item>
        <item name="neumorph_shapeAppearance">@style/CustomShapeAppearance.Img</item>
    </style>


    <!--Filter button start-->
    <style name="Filter_button" parent="android:Widget">
        <item name="android:padding">@dimen/design_settings_card_padding</item>
        <item name="android:stateListAnimator">@animator/button_state_list_anim_neumorph</item>
        <item name="neumorph_inset">@dimen/design_default_inset</item>
        <item name="neumorph_shadowElevation">2dp</item>
        <item name="neumorph_shadowColorLight">#0F1113</item>
        <item name="neumorph_shadowColorDark">#4D5963</item>
        <item name="neumorph_shapeType">flat</item>
        <item name="neumorph_shapeAppearance">@style/Custom.Filter_button</item>
    </style>


    <style name="Custom.Filter_button" parent="">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">@dimen/design_custom_Filter_button</item>
    </style>


    <dimen name="design_custom_Filter_button">8dp</dimen>

    <!--Filter button end-->


    <style name="CustomProm_and_oofers_BTn" parent="Widget">
        <item name="android:padding">@dimen/design_custom_padding</item>
        <item name="android:stateListAnimator">@animator/button_state_list_anim_neumorph</item>
        <item name="neumorph_inset">10dp</item>
        <item name="neumorph_shadowElevation">0.5dp</item>
        <item name="neumorph_shadowColorLight">#330F1113</item>
        <item name="neumorph_shadowColorDark">#334D5963</item>
        <item name="neumorph_shapeType">flat</item>
        <item name="neumorph_shapeAppearance">@style/CustomShapeAppearance.Category</item>
    </style>


    <!--Profile style Start-->
    <style name="CustomProfileCardView" parent="Widget">
        <item name="android:padding">15dp</item>
        <item name="android:stateListAnimator">@animator/button_state_list_anim_neumorph</item>
        <item name="neumorph_inset">1dp</item>
        <item name="neumorph_shadowElevation">0.5dp</item>
        <item name="neumorph_shadowColorLight">#0F1113</item>
        <item name="neumorph_shadowColorDark">#4D5963</item>
        <item name="neumorph_shapeType">flat</item>
        <item name="neumorph_shapeAppearance">@style/CustomShapeAppearance.Img</item>
    </style>

    <style name="CustomProfileCardView.Img" parent="">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">@dimen/design_CustomProfileCardView_img</item>
    </style>

    <dimen name="design_CustomProfileCardView_img">12dp</dimen>

</resources>