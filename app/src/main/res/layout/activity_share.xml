<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/card_gradient"
    tools:context=".Activity.ShareActivity.ShareActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margins"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="@dimen/margins">

            <ImageView
                android:id="@+id/back_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_back"
                android:onClick="onBack"
                android:tint="@color/text_color"/>

            <ImageView
                android:id="@+id/share_img"
                android:layout_width="30dp"
                android:onClick="share"
                android:layout_height="30dp"
                android:src="@drawable/ic_share"
                android:layout_alignParentEnd="true"
                android:tint="@color/text_color"/>

        </RelativeLayout>




        <RelativeLayout
            android:id="@+id/con"
            android:layout_width="match_parent"
            android:layout_height="441dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/prom_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/promotion_offers_grdient"
                android:padding="10dp">


                <TextView
                    android:id="@+id/prom_name_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margins"
                    android:layout_toStartOf="@id/icon"
                    android:maxLength="40"
                    android:padding="18dp"
                    android:singleLine="true"
                    android:text="Lorem ipsum dolor sit amet consectetur adipisicing elit. Maxime mollitia,
            molestiae quas vel sint commodi"
                    android:textColor="@color/text_color"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toStartOf="@id/prom_precent_text"
                    android:src="@drawable/ic_precent"
                    android:tint="@color/aply_text_color"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/prom_precent_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margins"
                    android:text="50%"
                    android:textColor="@color/aply_text_color"
                    android:textSize="17sp" />

            </RelativeLayout>

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="25dp"
                android:src="@drawable/ic_logo_for_share"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>