<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp">

    <soup.neumorphism.NeumorphCardView
        android:id="@+id/message_card_adapter"
        style="@style/CustomCategoryVidget"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:clickable="true"
        android:padding="20dp"
        app:neumorph_backgroundColor="@color/card_background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/msg_check_uncheck_view"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/mesg_uncheked_back" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/msg_check_uncheck_view"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/msg_name_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome to our application!"
                    android:textColor="@color/text_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/msg_desc_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:maxLength="90"
                    android:text="Lorem ipsum dolor sit amet consectetur adipisicing elit. Maxime mollitia..."
                    android:textColor="@color/text_color"
                    android:textSize="12sp" />


            </LinearLayout>


            <TextView
                android:id="@+id/data_income_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:text="28.01.2022"
                android:textColor="#7F8FA7"
                android:textSize="12sp" />

        </RelativeLayout>

    </soup.neumorphism.NeumorphCardView>

</RelativeLayout>