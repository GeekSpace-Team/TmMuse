<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_profile"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:clickable="true"
    app:cardElevation="6dp"
    app:cardCornerRadius="12dp"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/profile_adapter_img"
            android:layout_width="100dp"
            android:layout_height="125dp"
            android:padding="1.5dp"
            android:scaleType="centerCrop"
            app:riv_corner_radius_bottom_left="12dp"
            app:riv_corner_radius_top_left="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/profile_adapter_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margins"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:text="Zenan"
                android:textAllCaps="false"
                android:textColor="@color/text_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/profile_adapter_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margins"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:gravity="left"
                android:text="Lorem ipsum dolor sit amet consectetur adipisicing elit. Maxime mollitia, molestiae..."
                android:textAlignment="gravity"
                android:textColor="@color/text_color"
                android:textSize="12sp"
                android:maxLines="3"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>