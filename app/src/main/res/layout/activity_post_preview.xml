<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2B3238"
    tools:context=".Activity.PostPreview.PostPreviewActivity">


    <ImageView
        android:id="@+id/back_img_promotion"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B92B3238" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margins"
                android:layout_marginEnd="@dimen/margins"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:padding="15dp">

                    <ImageView
                        android:id="@+id/ic_eye"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_eye"
                        android:tint="#7F8FA7"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:id="@+id/look_txt_counts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_toEndOf="@id/ic_eye"
                        android:text="100 Views"
                        android:textColor="#7F8FA7"
                        android:textSize="14sp"
                        android:layout_centerVertical="true"/>

                    <ImageView
                        android:id="@+id/close_promotion_img"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_close_promotion"
                        android:tint="#7F8FA7"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_marginStart="@dimen/margins"
                    android:layout_marginEnd="@dimen/margins">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/promotion_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        app:riv_corner_radius="12dp" />

                </LinearLayout>


                <TextView
                    android:id="@+id/promotion_tit_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:textColor="#FFF"
                    android:textSize="29sp" />

                <TextView
                    android:id="@+id/prom_desc_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margins"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="@dimen/margins"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_horizontal"
                    android:textColor="#FFF"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/more_btn"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="60dp"
                    android:background="@drawable/promotios_back_btn"
                    android:gravity="center"
                    android:text="@string/see_more"
                    android:textColor="#FFF" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:padding="15dp"
                    android:layout_marginTop="15dp">

                    <LinearLayout
                        android:id="@+id/fing_down_lay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/fing_down_img"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_fing_down" />

                        <TextView
                            android:id="@+id/dis_like_count_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:text="360"
                            android:textColor="#FFF"
                            android:textSize="12sp" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="40dp"
                        android:layout_toStartOf="@id/fing_down_lay"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/fing_up_img"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_fing_up" />

                        <TextView
                            android:id="@+id/like_count_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:text="360"
                            android:textColor="#FFF"
                            android:textSize="12sp" />

                    </LinearLayout>

                </RelativeLayout>


            </LinearLayout>


        </RelativeLayout>


    </ScrollView>

</RelativeLayout>