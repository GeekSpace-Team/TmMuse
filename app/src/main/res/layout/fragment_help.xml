<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.HelpFragment.HelpFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margins"
            android:layout_marginTop="24dp"
            android:layout_marginRight="@dimen/margins"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/go_back_img"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_back"
                    app:tint="@color/text_color" />

                <TextView
                    android:id="@+id/help_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:text="@string/help"
                    android:textColor="@color/text_color"
                    android:textSize="24sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/full_name"
                android:textColor="@color/text_color"
                android:textSize="16sp" />

            <soup.neumorphism.NeumorphCardView
                style="@style/CustomShapeAppearance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/margins_five"
                android:background="@drawable/gradient_press">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="14dp">

                    <EditText
                        android:id="@+id/full_name_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/margins_edt"
                        android:layout_marginRight="@dimen/margins_edt"
                        android:background="@android:color/transparent"
                        android:editable="false"
                        android:gravity="center_vertical"
                        android:inputType="text"
                        android:textColor="@color/text_color"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>


            </soup.neumorphism.NeumorphCardView>

            <TextView
                android:id="@+id/number_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/ph_number"
                android:textColor="@color/text_color"
                android:textSize="16sp" />

            <soup.neumorphism.NeumorphCardView
                style="@style/CustomShapeAppearance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/margins_five"
                android:background="@drawable/gradient_press"
                app:neumorph_shapeType="pressed">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="14dp">

                    <EditText
                        android:id="@+id/number_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/margins_edt"
                        android:layout_marginRight="@dimen/margins_edt"
                        android:background="@android:color/transparent"
                        android:editable="false"
                        android:gravity="center_vertical"
                        android:textColor="@color/text_color"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </soup.neumorphism.NeumorphCardView>

            <TextView
                android:id="@+id/email_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/email"
                android:textColor="@color/text_color"
                android:textSize="16sp" />

            <soup.neumorphism.NeumorphCardView
                style="@style/CustomShapeAppearance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/margins_five"
                android:background="@drawable/gradient_press"
                app:neumorph_shapeType="pressed">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="14dp">

                    <EditText
                        android:id="@+id/email_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/margins_edt"
                        android:layout_marginRight="@dimen/margins_edt"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical"
                        android:hint="tes@test.test"
                        android:textColor="@color/text_color"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </soup.neumorphism.NeumorphCardView>


            <TextView
                android:id="@+id/your_message_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/your_message"
                android:textColor="@color/text_color"
                android:textSize="16sp" />

            <soup.neumorphism.NeumorphCardView
                style="@style/CustomShapeAppearance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margins_five"
                android:background="@drawable/gradient_press"
                app:neumorph_shapeType="pressed">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="14dp">


                    <EditText
                        android:id="@+id/ed_message"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginLeft="@dimen/margins_edt"
                        android:layout_marginRight="@dimen/margins_edt"
                        android:background="@android:color/transparent"
                        android:gravity="top|start"
                        android:inputType="text"
                        android:textColor="@color/text_color"
                        android:lines="15"
                        android:maxLines="15"
                        android:singleLine="false"/>

                </LinearLayout>

            </soup.neumorphism.NeumorphCardView>


            <soup.neumorphism.NeumorphButton
                android:id="@+id/send_btn"
                style="@style/SettingsCardView"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margins_save_btn"
                android:layout_marginTop="25dp"
                android:layout_marginRight="@dimen/margins_save_btn"
                android:gravity="center"
                android:text="@string/Send"
                android:textColor="#FFF"
                android:textSize="18sp"
                android:visibility="visible"
                app:neumorph_backgroundColor="@color/aply_text_color" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp" />


        </LinearLayout>


    </ScrollView>

</FrameLayout>