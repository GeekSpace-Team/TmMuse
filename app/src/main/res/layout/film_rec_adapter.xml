<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="159dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="5dp">

    <soup.neumorphism.NeumorphCardView
        style="@style/CustomCategoryVidget"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/film_card"
        android:clickable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/films_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/nw_movies"
                android:scaleType="fitXY"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:padding="2dp"
                app:riv_corner_radius="16dp" />

            <TextView
                android:id="@+id/name_film"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:padding="3dp"
                android:layout_above="@id/category_film"
                android:text="Episode - 1"
                android:textColor="#FFF"
                android:textSize="14sp"
                android:shadowColor="@color/text_color"
                android:maxLines="2" />

            <TextView
                android:id="@+id/category_film"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentBottom="true"
                android:text="The End of the Road"
                android:textColor="#FFF"
                android:layout_marginBottom="18dp"
                android:textSize="12sp"
                android:singleLine="true"/>


        </RelativeLayout>


    </soup.neumorphism.NeumorphCardView>

</RelativeLayout>