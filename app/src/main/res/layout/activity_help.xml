<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/card_gradient"
    tools:context=".Activity.Help.HelpActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margins"
            android:layout_marginTop="25dp"
            android:layout_marginRight="@dimen/margins"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/go_back_img"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/app_name"
                    android:onClick="on_back_pressed"
                    android:src="@drawable/ic_back"
                    app:tint="@color/text_color" />

                <TextView
                    android:id="@+id/help_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:text="@string/help"
                    android:textColor="@color/text_color"
                    android:textSize="24sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/full_name"
                android:textColor="@color/text_color"
                android:textSize="16sp" />

            <soup.neumorphism.NeumorphCardView
                style="@style/CustomShapeAppearance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/margins_five"
                android:background="@drawable/gradient_press"
                app:neumorph_shapeType="pressed">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="14dp">

                    <EditText
                        android:id="@+id/full_name_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/margins_edt"
                        android:layout_marginRight="@dimen/margins_edt"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical"
                        android:hint="@string/full_name"
                        android:inputType="text"
                        android:textColor="@color/text_color"
                        android:textSize="14sp" />

                </LinearLayout>


            </soup.neumorphism.NeumorphCardView>

            <TextView
                android:id="@+id/number_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/ph_number"
                android:textColor="@color/text_color"
                android:textSize="16sp" />

            <soup.neumorphism.NeumorphCardView
                style="@style/CustomShapeAppearance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/margins_five"
                android:background="@drawable/gradient_press"
                app:neumorph_shapeType="pressed">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="14dp">

                    <TextView
                        android:id="@+id/numberBefore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margins_edt"
                        android:layout_marginRight="@dimen/margins_edt"
                        android:gravity="center_vertical"
                        android:text="+9936"
                        android:textColor="@color/text_color"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/number_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/margins_edt"
                        android:layout_marginRight="@dimen/margins_edt"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical"
                        android:inputType="number"
                        android:textColor="@color/text_color"
                        android:textSize="14sp" />
                </LinearLayout>

            </soup.neumorphism.NeumorphCardView>


            <TextView
                android:id="@+id/emil_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/email"
                android:textColor="@color/text_color"
                android:textSize="16sp" />

            <soup.neumorphism.NeumorphCardView
                style="@style/CustomShapeAppearance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/margins_five"
                android:background="@drawable/gradient_press"
                app:neumorph_shapeType="pressed">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="14dp">

                    <EditText
                        android:id="@+id/emil_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/margins_edt"
                        android:layout_marginRight="@dimen/margins_edt"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical"
                        android:hint="@string/email"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/text_color"
                        android:textSize="14sp" />

                </LinearLayout>


            </soup.neumorphism.NeumorphCardView>


            <TextView
                android:id="@+id/message_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/your_message"
                android:textColor="@color/text_color"
                android:textSize="16sp" />


            <soup.neumorphism.NeumorphCardView
                style="@style/CustomShapeAppearance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/margins_five"
                android:background="@drawable/gradient_press"
                app:neumorph_shapeType="pressed">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="14dp">

                    <EditText
                        android:id="@+id/message_edit"
                        android:layout_width="0dp"
                        android:layout_height="160dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/margins_edt"
                        android:layout_marginRight="@dimen/margins_edt"
                        android:background="@android:color/transparent"
                        android:gravity="top"
                        android:hint="@string/your_message"
                        android:inputType="text"
                        android:textColor="@color/text_color"
                        android:textSize="14sp"
                        tools:ignore="Suspicious0dp"
                        android:layout_weight="1"
                        android:lines="7"/>

                </LinearLayout>


            </soup.neumorphism.NeumorphCardView>


            <TextView
                android:id="@+id/after_call_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"
                android:text="@string/after_call"
                android:textColor="@color/text_color"
                android:textSize="16sp" />


            <soup.neumorphism.NeumorphButton
                android:id="@+id/send_btn"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margins_save_btn"
                android:layout_marginTop="25dp"
                android:layout_marginRight="@dimen/margins_save_btn"
                android:gravity="center"
                android:text="@string/Send"
                android:textColor="#FFF"
                android:textSize="18sp"
                app:neumorph_backgroundColor="@color/aply_text_color" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="90dp" />


        </LinearLayout>


    </ScrollView>

</RelativeLayout>