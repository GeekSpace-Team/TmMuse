<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.CardFragment.CardFragment"
    android:background="@drawable/card_gradient">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/margins_home"
            android:layout_marginRight="@dimen/margins_home">


            <TextView
                android:id="@+id/tm_muse_card_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tm_muse_card"
                android:textColor="@color/text_color"
                android:textSize="24sp"
                android:layout_marginStart="3dp"/>

            <TextView
                android:id="@+id/tm_muse_card_desc_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tm_muse_card_desc"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center|start"
                android:gravity="start"
                android:layout_marginStart="3dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/cards_rec"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never"
                android:layout_marginTop="20dp"/>

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progress_card"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:visibility="gone"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"/>


        </LinearLayout>

</RelativeLayout>